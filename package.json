{
  "name": "symlnk-cli",
  "version": "1.0.1",
  "description": "A CLI program for batch creating symbolic links.",
  "keywords": [
    "ln",
    "symlink",
    "symbolic"
  ],
  "repository": {
    "url": "https://github.com/u3u/symlnk-cli.git"
  },
  "license": "MIT",
  "author": "u3u <qwq@qwq.cat> (https://github.com/u3u)",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": {
    "lnk": "./dist/cli.js",
    "symlink": "./dist/cli.js",
    "symlnk": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "prepare": "pnpm build",
    "test": "vitest --ui --coverage"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,ts,tsx,md}": [
      "eslint --fix"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "cac": "^6.7.14",
    "globby": "^13.2.2",
    "kolorist": "^1.8.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@tsconfig/node18": "^2.0.1",
    "@types/node": "^18.19.34",
    "@types/prompts": "^2.4.9",
    "@u3u/eslint-config": "^2.15.1",
    "@u3u/prettier-config": "^5.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.7",
    "eslint": "^8.57.0",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.11.1",
    "symlnk-cli": "link:",
    "tsup": "^6.7.0",
    "typescript": "^5.4.5",
    "vitest": "^0.34.6"
  },
  "packageManager": "pnpm@8.15.8",
  "publishConfig": {
    "access": "public"
  }
}
